<h1>New Recipe</h1>

<form>
  {{input type="text" class="create-title" placeholder="New Title" value=newTitle}}
  {{input type="text" class="create-author" placeholder="New Author" value=newAuthor}}
  {{view "select"  value=newRecipeType content=recipeType}}

  {{input type="text" class="create-prep-time" placeholder="New Prep Time" value=newPrepTime}}
  {{input type="text" class="create-cook-time" placeholder="New Cook Time" value=newCookTime}}
  {{input type="text" class="create-cook-temp" placeholder="New Cook Temp" value=newCookTemp}}

  {{view "select"  value=newCookTempUnits content=temperatureUnit}}

  {{input type="text" class="create-yield-number" placeholder="Yield Number" value=newYieldNumber}}
  {{input type="text" class="create-yield-units" placeholder="Yield Units" value=newYieldUnits}}

  <button {{action "createPost" newTitle newAuthor newRecipeType newPrepTime newCookTime newCookTemp newCookTempUnits newYieldNumber newYieldUnits}}>Create New Recipe</button>
</form>

{{outlet}}
